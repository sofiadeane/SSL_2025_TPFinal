{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar y ejecutar C",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compila el programa en C y luego lo ejecuta",
